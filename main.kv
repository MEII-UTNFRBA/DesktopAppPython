#:kivy 1.0
#:import Factory kivy.factory.Factory

<Main>:
    AsyncImage:
        opacity: 1
        size: self.texture_size
        source: './Img/test.jpg'
        allow_stretch: True

    Button:
        id: vna_connect
        size_hint: (None, None)
        height: 30
        width: 150
        pos_hint: {'center_x': 0.25, 'center_y':0.8}         # Con esto le digo donde va a estar
        font_size: 14
        text: "Conectar con equipo"
        # border: (0,0,0,0)
        bold: True
        text_size: (self.width, self.height)
        halign: 'center'
        valign: 'middle'
#        on_press: root.manager.current = 'trabajador_screen'
        on_press: Factory.VNAConnectPopup()

    Button:
        id: arduino_connect
        size_hint: (None, None)
        height: 30
        width: 150
        pos_hint: {'center_x': 0.25, 'center_y':0.4}         # Con esto le digo donde va a estar
        font_size: 14
        text: "Conectar con Arduino"
        # border: (0,0,0,0)
        bold: True
        text_size: (self.width, self.height)
        halign: 'center'
        valign: 'middle'
#        on_press: root.manager.current = 'trabajador_screen'
        on_press: Factory.ArduinoConnectPopup()


    BoxLayout:
        id: smith
        size_hint: (None,None)
        size: (300,300)
        pos_hint: {'center_x':0.8, 'center_y':0.4}
        canvas.before:
            Color:
                rgba: (0.95, 0.95, 0.95, 1)
            Rectangle:
                pos: self.pos
                size: self.size
        AsyncImage:
            opacity: 1
            size: self.texture_size
            source: './Img/smith_chart.png'
            allow_stretch: True